<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_show_data_base"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.nazar.v102_l100.ShowDataBase"
    tools:showIn="@layout/activity_show_data_base">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ax, Ay, Az - Acceleration"
        android:id="@+id/ShowDataBase_tv_1"
        android:textColor="@android:color/black"
        android:textSize="14sp"/>

    <TextView
        android:layout_below="@+id/ShowDataBase_tv_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wx, Wy, Wz - Position"
        android:id="@+id/ShowDataBase_tv_2"
        android:textColor="@android:color/black"
        android:textSize="14sp"/>

    <TextView
        android:layout_below="@+id/ShowDataBase_tv_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="T - Time step in milliseconds"
        android:id="@+id/ShowDataBase_tv_3"
        android:textColor="@android:color/black"
        android:textSize="14sp"/>

    <TextView
        android:layout_below="@+id/ShowDataBase_tv_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="O - Number of operations"
        android:id="@+id/ShowDataBase_tv_4"
        android:textColor="@android:color/black"
        android:textSize="14sp"/>

    <ListView
        android:layout_below="@+id/ShowDataBase_tv_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ShowDataBase_lv_positions">
    </ListView>
</RelativeLayout>
